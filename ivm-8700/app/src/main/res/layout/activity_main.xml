<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.ivms.ivms8700.view.MainActivity">

    <FrameLayout
        android:id="@+id/frag_cont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="#ffffff"
        android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/video_lay"
           android:layout_width="@dimen/dp0"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/video_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/shi"
               />
           <TextView
               android:id="@+id/video_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp4"
               style="@style/main_tab_txt"
               android:text="@string/video"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/image_management_lay"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_management_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tuxiangguanli"
                />
            <TextView
                android:id="@+id/image_management_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/main_tab_txt"
                android:layout_marginTop="@dimen/dp4"
                android:text="@string/image_management"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_lay"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/message_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xiaoxi_1"
                />
            <TextView
                android:id="@+id/message_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                style="@style/main_tab_txt"
                android:text="@string/message"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_lay"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/my_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wode"
                />
            <TextView
                android:id="@+id/my_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                style="@style/main_tab_txt"
                android:text="@string/my"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
