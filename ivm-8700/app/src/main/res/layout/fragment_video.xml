<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<ImageView-->
    <!--android:id="@+id/background3"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="fitXY"-->
    <!--android:src="@mipmap/filenull"-->
    <!--android:visibility="visible" />-->

        <com.ivms.ivms8700.view.MyGridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:horizontalSpacing="5dp"

            android:numColumns="2"
            android:verticalSpacing="5dp" />


    <RelativeLayout
        android:id="@+id/rlbottom"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintVertical_weight="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/main_back_e6e6e6"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvdelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp60"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/delete"
            android:padding="@dimen/dp5"
            android:text="@string/video_del"
            android:textColor="@color/main_text_454545"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp60"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share"
            android:padding="@dimen/dp5"
            android:text="@string/video_share"
            android:textColor="@color/main_text_454545"
            android:textSize="10sp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
